<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<!-- Here, I added edit text so that user will enter any notes in the list-->
    <EditText
        android:id="@+id/todo_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        />

<!--User will press the add button to add their entry into the list-->
    <Button
        android:id="@+id/add_button"
        android:layout_width="100sp"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:text="ADD"
        android:textColor="@color/black" />

<!--This is a heading for my application-->
    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your notes"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"/>

<!--To do list to view the all entry in the list-->
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>